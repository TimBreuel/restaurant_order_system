<!DOCTYPE html>
<html lang="zxx" class="no-js">
  <head>
    <%- include('partials/header') %>
  </head>
  <body>
    <%- include('partials/adminHeader') %>
    <!-- #header -->

    <!-- start banner Area -->
    <section class="about-banner relative">
      <div class="overlay overlay-bg"></div>
      <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
          <div class="about-content col-lg-12">
            <h1 class="text-white">
              Menus
            </h1>
            <p class="text-white link-nav">
              <a href="/admin">Home </a>
              <span class="lnr lnr-arrow-right"></span>
              <a href="/admin/addMeal"> Add Meal</a>
            </p>
          </div>
        </div>
      </div>
    </section>
    <!-- End banner Area -->

    <!-- Start menu-area Area -->
    <section class="menu-area section-gap" id="menu">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="menu-content pb-70 col-lg-8">
            <div class="title text-center">
              <h1 class="mb-10">Here you can see your aktuell menu.</h1>
              <p>Who are in extremely love with eco friendly system.</p>
            </div>
          </div>
        </div>

        <ul class="filter-wrap filters col-lg-12 no-padding">
          <li class="active" data-filter="*">All Menu</li>
          <li data-filter=".drinks">Drinks</li>
          <li data-filter=".breakfast">Breakfast</li>
          <li data-filter=".lunch">Lunch</li>
          <li data-filter=".dinner">Dinner</li>
        </ul>

        <div class="filters-content">
          <div class="row grid">
            <!-- JSX LOOP TO RENDER MENU -->
            <% meals.forEach(meal => { %> <% if (meal.img !== '') { %>
            <div class="col-md-6 all <%= meal.category %>">
              <div class="single-menu">
                <div class="row">
                  <div class="col-md-4" style="padding: 0 0 0 0;">
                    <img
                      src="<%= meal.img %> "
                      alt=""
                      width="100%"
                      height="150px"
                      class="rounded"
                    />
                  </div>
                  <div class="col-md-8">
                    <div class="title-wrap d-flex justify-content-between">
                      <% if (meal.number !== '') { %>
                      <h4><%= meal.number %> <%= meal.title %></h4>
                      <h4 class="price">$<%= meal.price %></h4>
                      <% }else{ %>
                      <h4><%= meal.title %></h4>
                      <h4 class="price">$<%= meal.price %></h4>
                      <% } %>
                    </div>
                    <p>
                      <%= meal.description %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <% }else{ %>
            <div class="col-md-6 all <%= meal.category %>">
              <div class="single-menu">
                <div class="title-wrap d-flex justify-content-between">
                  <% if (meal.number !== '') { %>
                  <h4><%= meal.number %> <%= meal.title %></h4>
                  <h4 class="price">$<%= meal.price %></h4>
                  <% }else{ %>
                  <h4><%= meal.title %></h4>
                  <h4 class="price">$<%= meal.price %></h4>
                  <% } %>
                </div>
                <p>
                  <%= meal.description %>
                </p>
              </div>
            </div>
            <% } %> <% }) %>
          </div>
        </div>
      </div>
    </section>
    <!-- End menu-area Area -->

    <!-- start footer Area -->
    <%- include('partials/footer') %>
    <!-- End footer Area -->

    <%- include('partials/scripts') %>
  </body>
</html>
